<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="adminMapper">

<!-- 현재 유저의 수 조회 -->
<select id = "userCount" resultType="kosta.web.model.vo.ChartVo">
select cnt_date as cntDate, cnt_user as cntUser 
from usercount
</select>

<!-- 하루에 한번씩 유저 수 카운트 -->
<insert id = "insertCount">
insert into usercount values(sysdate, (select count(id) from usertable))
</insert>

<!-- 여행지에 등록된 컨텐츠의 수 -->
<select id = "travelgeInfoCount" resultType="int">
select count(*) from TRAVELGE_INFO
</select>
<!-- 먹거리에 등록된 컨텐츠의 수 -->
<select id = "restaurantInfoCount" resultType="int">
select count(*) from RESTAURANT
</select>
<!-- 볼거리에 등록된 컨텐츠의 수 -->
<select id = "lookInfoCount" resultType="int">
select count(*) from LOOK_INFO
</select>

<!-- 최신 리뷰 (블로그 date 기준으로 하루)의 수 -->
<select id = "latestReview" resultType="int">
select count(*) from blog where to_char(blog_date,'YY/MM/DD') = to_char(sysdate,'YY/MM/DD')
</select>
</mapper>