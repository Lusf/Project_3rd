<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapper">

	<sql id="userColumn">
	id, password, tell, user_pic , point
	</sql>
	<resultMap type="kosta.web.model.vo.UserVo" id="userVo">
		<id column="id" property="id" />
		<result column="password" property="password"/>
		<result column="tell" property="tell"/>
		<result column="point" property="point"/>
	</resultMap>

	<select id="selectMemberById" resultMap="userVo">
		select
		<include refid="userColumn" />
		from member where ID=#{_parameter}

	</select>
	
	<insert id="userJoin" parameterType="kosta.web.model.vo.UserVo">
	insert into member(<include refid="userColumn"/>)
	values(#{id},#{password},#{tell},#{userPic},#{point})
	</insert>

</mapper>