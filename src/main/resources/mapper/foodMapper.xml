	<!-- 맛집 수정하기 -->
	<update id="updateRestaurant">
		update Restaurant
		set RESTAURANT_NAME =
		${restaurantName},
		RESTAURANT_INFO = ${restaurantInfo},
		CATEGORY =
		${category},
		CATEGORY2 = ${category2},
		RESTAURANT_ADDRESS =
		${restaurantAddr},
		RESTAURANT_COORDINATES = ${restaurantCoordinates},
		RESTAURANT_PIC = ${restaurantPic}
		where content_CODE=${contentCode}
	</update>


	<!-- 맛집 삭제하기 -->
	<delete id="deleteRestaurant" parameterType="String">
		delete
		Restaurant_INFO where content_CODE=#{_parameter}
